option roles_spl_play_soccer{
  initial state start {    
    action {
      // react to the game controller and handle fall down
      basic_play();

      situationStatusOwnHalf = true;

      roles_play_soccer();

      // control the arms
      arms_control();
      
      // control head movement according to value of head.control_mode
      head_control();
    }
  }
}