option path_short_kick
{

  enum direction @foot;
  
  initial state wait
  {
    decision
    {
      if(executed_motion.type != walk)
        stay;
      else if(@foot == right)
        goto kick_with_right_foot;
      else if(@foot == left)
        goto kick_with_left_foot;
      else
        stay;
    }
    action
    {
      head.control_mode = search_for_ball;
    }
  }

  state kick_with_right_foot
  {
    decision
    {
      if(path.kick_executed)
        goto short_freeze;
      else
        stay;
    }
    action
    {
      path.routine = short_kick_right;
    }
  }

   state kick_with_left_foot
  {
    decision
    {
      if(path.kick_executed)
        goto short_freeze;
      else
        stay;
    }
    action
    {
      path.routine = short_kick_left;
    }
  }

  state short_freeze {
    decision {
      if(state_time > 500)
        goto finished;
      else 
        stay; 
    }
    action {
      path.routine = none;
    }
  
  }

  target state finished
  {
    decision
    {
      stay;
    }
    action
    {
      path.routine = none;
    }
  }
}