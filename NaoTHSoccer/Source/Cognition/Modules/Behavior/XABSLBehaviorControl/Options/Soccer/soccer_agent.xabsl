/** The root option of the soccer behavior */
option soccer_agent {

  common decision
  {
    if (game.phase == penaltyshoot)
        goto penalty_shootout;
     else if (game.phase == normal)
        goto normal_soccer;
  }
  
  initial state idle{
    decision {
      else
        goto normal_soccer;
    }
    action {}
  }

  state normal_soccer{
    action {
      roles_agent();
    }
  }

  state penalty_shootout{
    action {
      play_penalty();
    }
  }
}