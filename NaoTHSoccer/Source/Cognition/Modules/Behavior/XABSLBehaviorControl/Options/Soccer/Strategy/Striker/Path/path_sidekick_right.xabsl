option path_sidekick_right
{
	initial state finish_turning {
	decision {
	    if(action_done)
	      goto approach_sidekick_to_right;
	    else
	      stay;
	  }
	  action{
	    situation_abortable = false;
	    path_turn_to_attack_direction();
	  }
	}
  state approach_sidekick_to_right {
    decision {
      if(action_done)
        goto sidekick_to_right;
      else
        stay;
    }
    action {
      path_go_to_ball_with_foot_dynamic(right = false, distance = 140, offset.y=-45);
    }
  }

  state sidekick_to_right{
    decision {
      if(action_done)
        goto done;
      else
        stay;
    }
    action {
      situation_abortable = false;
      path_sidekick(to = right);
    }
  }

  target state done
  {
    decision {
      stay;
    }
    action {
      //NOTE: this is synchronized with sidekick()->finished
      motion.type = stand;

      //loook at percept
      head.control_mode = look_at_ball_percept;
    }
  }
}
