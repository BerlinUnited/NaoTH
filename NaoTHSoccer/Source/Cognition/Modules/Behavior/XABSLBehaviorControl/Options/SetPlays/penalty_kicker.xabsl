/* If walking in a slight curve fails, read comment in the look for ball state */
option penalty_kicker
{
  initial state look_for_ball
  {
    decision
    {
      if(state_time > 3000)
      {
        if(ball.know_where_itis)
        {
          if(random() > 0.3)
          {
            if(random() > 0.5)
            {
              goto go_right;
            }
            else
            {
              goto go_left;
            }
          }
          else
          {
            goto approach_ball_right;
          }
        }
        else
          goto move_closer;
      }
      else
        stay;
    }
    action
    {
      motion.type = stand;
      head.control_mode = search_for_ball;
    }
  }

  state move_closer 
  {
    decision
    {
      if(state_time > 2500)
      {
        if(ball.know_where_itis)
          goto approach_ball_right;
        else
          goto look_for_ball;
      }
      else
        stay;
    }
    action
    {
      motion.type = walk;
      motion.walk.style = stable;
      motion.walk_speed.x = 50;
      motion.walk_speed.y = 0;
      motion.walk_speed.rot = 0;
      
      head.control_mode = search_for_ball_and_look_around;
    }
  }

  state approach_ball_right
  {
    decision
    {
      if (action_done)
        goto look_for_ball_tmp;//do_kick;
      else
        stay;
    }
    action
    {
      go_to_ball_with_foot(right=true, distance=180);
      head.control_mode = search_for_ball_and_look_around;
      
    }
  }

  state go_right
  {
    decision
    {
      // set to 300 for kicking perfectly to the corner
      // but the kick is not strong enough
      if (ball.preview.y > 260)
        goto approach_ball_right;
      else
        stay;
    }
    action
    {
      motion.type = walk;
      motion.walk.style = stable;
      motion.walk_speed.x = 0;
      motion.walk_speed.y = -50;
      motion.walk_speed.rot = 0;
      
      head.control_mode = search_for_ball_and_look_around;
    }
  }
  state go_left
  {
    decision
    {
      // set to 300 for kicking perfectly to the corner
      // but the kick is not strong enough
      if (ball.preview.y < -260)
        goto approach_ball_right;
      else
        stay;
    }
    action
    {
      motion.type = walk;
      motion.walk.style = stable;
      motion.walk_speed.x = 0;
      motion.walk_speed.y = 50;
      motion.walk_speed.rot = 0;
      
      head.control_mode = search_for_ball_and_look_around;
    }
  }
  
  state look_for_ball_tmp
  {
    decision
    {
      if(state_time > 100)
      {
        goto do_kick;
      }
      else
        stay;
    }
    action
    { 
      motion.type = stand;
      head.control_mode = search_for_ball_and_look_around;
    }
  }

  state do_kick
  {
    decision
    {
      if(path.kick_executed)//action_done)
        goto finished;
      else
        stay;
    }
    action
    {
      //path_short_kick(foot = right);
      //path_long_kick(foot = right);
      path2018.routine = forwardkick_right;
      head.control_mode = search_for_ball_and_look_around;
      
    }
  }

  target state finished
  {
    decision
    {
      stay;
    }
    action
    {
      motion.type = stand;
      head.control_mode = look_straight_ahead;
    }
  }

}