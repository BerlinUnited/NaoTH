  state long_kick {
    decision{
      else if(action_done)
        goto goto_ball;
      else
        stay;
    }
    action{
      situation_abortable = true;
      new_kick_long_with_approach();
    }
  }

    state short_kick {
    decision{
      else if(action_done)
        goto goto_ball;
      else
        stay;
    }
    action{
      situation_abortable = true;
      new_kick_short_with_approach();
    }
  }

}
