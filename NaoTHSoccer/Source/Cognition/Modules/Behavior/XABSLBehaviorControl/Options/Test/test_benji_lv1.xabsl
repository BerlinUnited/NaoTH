option test_benji_lv1{

common decision {
  if (!body.ready_to_walk || game.current_mode != playing)
    goto idle;
}

initial state idle{
  decision 
  {
    else
      goto defenseline;
  }
  action{}
}

state defenseline{
  decision
  {
    else if (action_done){
      goto stop;
    } else {
      stay;
    }
  }
  action
  {
    go_to_point(x=field.xPosFirstDefenseline, y=field.yPosLeftFlank, rot=0);
  }
}


target state stop {
  action
  {
  }
}

}
