option action_based_striker_test
{
  common decision
  {
    if(!body.ready_to_walk || game.current_mode != playing)
      goto idle;
  }
  

  initial state idle
  {
    decision
    {
      else if(game.current_mode == playing)
        goto calibrate_inertial;
      else
        stay;
    }
    action
    {
    }
  }

  state calibrate_inertial
  {
    decision
    {
      else if(sensor.inertial.calibrated)
        goto localize;
      else 
        stay;
    }
    action
    {
      show_calibration();
      motion.type = stand;
      head.control_mode = look_straight_ahead;
    }
  }

  // actualy check for localize
  state localize
  {
    decision
    {
      else if((robot_pose.is_valid && state_time > 6000) || 
        state_time>12000)
      {
        if(game.current_mode == playing)
          goto play;
        else 
          goto idle;
      }
      else
        stay;
    }
    action 
    {
      head.control_mode = search_for_goal;
      situationStatusOwnHalf = false;
      //robot is in opphalf to test better
      situationStatusOppHalf = true;
      motion.type = stand;
    }
  }

  state play {
    decision {
      else
        stay;
    }
    action{
      action_based_striker();

    }
  }
}
