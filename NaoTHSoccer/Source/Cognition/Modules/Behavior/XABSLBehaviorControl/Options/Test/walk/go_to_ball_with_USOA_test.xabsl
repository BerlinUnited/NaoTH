option go_to_ball_with_USOA_test{

  common decision
  {
    if(!body.ready_to_walk || game.current_mode != playing)
      goto idle;
  }
  

  initial state idle
  {
    decision
    {
      else if(game.current_mode == playing)
        goto go;
      else
        stay;
    }
    action
    {
    }
  }

  state go
  {
	  decision
	  { 
	    else if(action_done && vector.abs(x=ball.preview.x, y=ball.preview.y) < 210)
	      goto done;
	    else
	      stay;
	  }
	  action
	  {
	    go_to_ball_with_USOA(distance=190);
	  }
  }

  state done
  {
    decision{
      else if(vector.abs(x=ball.preview.x, y=ball.preview.y) > 210)
        goto go;
      else
        stay;
    }
    action{
      motion.type = stand;
      head.control_mode = search_for_ball;    
    }
  }
}