option search_ball_test
{  
  
  common decision
  {
    if(!body.ready_to_walk || game.current_mode != playing)
      goto idle;
  }
  

  initial state idle
  {
    decision
    {
      else if(game.current_mode == playing)
        goto search;
      else
        stay;
    }
    action
    {
    }
  }


  state search
  {
    decision {
      else if(action_done)
        goto look_at_ball;
      else
        stay;
    }
    action {
      search_ball();
    }
  }

  state look_at_ball
  {
    decision {
      else if(ball.time_since_last_seen > 1500)
        goto search;
      else
        stay;
    }
    action {
      motion.type = stand;
      head.control_mode = search_for_ball;
    }
  }
}
