option cammatrix_test
{
  common decision
  {
    if(!body.ready_to_walk || game.current_mode != playing)
      goto idle;
  }
  
  initial state idle {
    decision {
      else if(game.current_mode == playing)
        goto search;
      else
        stay;
    }
    action {}
  }

  state search {
    decision {
      else
        stay;
    }
    action {
      motion.type = stand;
      head.control_mode = look_around;
    }
  }
}
