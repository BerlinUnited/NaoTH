option bdr_agent 
{
  
  initial state play_soccer {
    action {
      // react to the game controller and handle fall down
      basic_play();

      // reset the playing time by default
      bdr.time_playing = 0;

      bdr_play(min_temperature = 30,
               max_temperature = 70,
               inc_temperature = 10,
               offset_max_temp_reached = 2,
               min_battery = 0.5,
               max_battery = 0.9,
               dec_battery = 0.04,
               inc_battery = 0.06,
               offset_min_battery_reached = 0.02,
               reload_consumed = true,
               wait_for_each_other = true);

      // control the arms
      arms_control();
      
      // control head movement according to value of head.control_mode
      //head.control_mode = none;
      head_control();

      //hack
      situationStatusOwnHalf = situationStatusOwnHalf || (game.player_number == 1);

      motion.walk.style = stable;
    }
  }
}
