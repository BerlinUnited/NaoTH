option go_to_ball_with_foot_and_USOA_test{

  common decision
  {
    if(!body.ready_to_walk || game.current_mode != playing)
      goto idle;
  }
  

  initial state idle
  {
    decision
    {
      else if(game.current_mode == playing)
        goto go_to_ball_with_right;
      else
        stay;
    }
    action
    {
    }
  }

  state go_to_ball_with_right
  {
  
  decision
  { else if(action_done)
      goto close_to_ball_situation_after_right;
    else
      stay;
  }
  action
  {
    go_to_ball_with_foot_and_USOA(right = true,distance=130);
  }
  
  }

  state close_to_ball_situation_after_right{
    decision{
      else if(action_done)
        goto go_to_ball_with_left;
      else
        stay;
    }
    action{
      close_to_ball_with_USOA_situation();
    }
  }

  state go_to_ball_with_left
  {
  
  decision
  { else if(action_done)
      goto close_to_ball_situation_after_left;
    else
      stay;
  }
  action
  {
    go_to_ball_with_foot_and_USOA(right = false,distance=130);
  }
  
  }
  

  state close_to_ball_situation_after_left{
    decision{
      else if(action_done)
        goto go_to_ball_with_right;
      else
        stay;
    }
    action{
      close_to_ball_with_USOA_situation();
    }
  }

  
  
}