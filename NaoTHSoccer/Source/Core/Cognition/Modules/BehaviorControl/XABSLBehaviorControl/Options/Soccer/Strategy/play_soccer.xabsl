option play_soccer
{
  common decision
  {
    if(!body.ready_to_walk)
      goto idle;
    else if(game.current_mode == playing)
      goto play;
    else if(game.current_mode == ready)
      goto ready;
    else if(true)
      goto idle;
  }  

  initial state idle{
    action{}
  }

  state play
  {
    action 
    {
      arm.control_mode = back;
    }
  }

  state ready
  {
    action 
    {
      arm.control_mode = back;
      decide_and_go_to_ready_position();
    }
  }
  
}