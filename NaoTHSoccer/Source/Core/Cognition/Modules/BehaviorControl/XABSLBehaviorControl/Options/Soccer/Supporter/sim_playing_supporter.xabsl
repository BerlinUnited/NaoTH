/** Playing as supporter */
option sim_playing_supporter {

 initial state ball_not_seen {
   decision {
    if(ball.was_seen)
      goto supporting;
    else stay;
    }
  action {
      simple_search_ball();
    }
  }

  target state supporting {
    decision {
      if ( ball.time_since_last_seen > 400 )
        goto ball_not_seen;
      else stay;
    }
      action {
        sim_simple_supporter();
      }
  }
}