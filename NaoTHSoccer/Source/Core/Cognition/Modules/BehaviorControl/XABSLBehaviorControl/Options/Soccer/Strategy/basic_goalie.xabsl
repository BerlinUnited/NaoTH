option basic_goalie
{
  common decision
  {
    if(!body.ready_to_walk || game.current_mode != playing)
      goto idle;
  }

  initial state idle {
    decision {
      else if(game.current_mode == playing)
        goto go_to_strategy_point;
      else
        stay;
    }
    action {
      
    }
  }


  state go_to_strategy_point
  {
       decision 
       {
         else if (ball.distance < 1200 && ball.time_since_last_seen < 1000)
           goto clear_ball;
         else if (action_done)
         {
           goto stand_and_look_at_ball;
         } else 
           stay;
       }
       action {
         go_to_point(rot=0, x=-4400, y=0);
         head.control_mode = search_for_goal;
       }
  }

  state stand_and_look_at_ball {
	  decision {
      else if (ball.distance < 1200 && ball.time_since_last_seen < 1000)
        goto clear_ball;
      else 
        stay;
	  }
	  action {
      motion.type = stand;
      head.control_mode = search_for_ball;
	  }
	}  


  state  clear_ball {   
   decision {
       else if (action_done 
           || (ball.distance > 1200 && ball.time_since_last_seen < 1000)
           || (ball.time_since_last_seen > 2000)) 
       {
         goto go_to_strategy_point;
       }
       else stay;
     }
     action {
       team.is_playing_as_striker = true;
       clear_ball_far_away();
     }
}
  
}