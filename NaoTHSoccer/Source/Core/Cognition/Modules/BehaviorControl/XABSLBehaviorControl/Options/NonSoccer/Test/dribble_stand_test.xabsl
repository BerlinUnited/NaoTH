// test dribble with step control

option dribble_stand_test 
{
  bool  @kick_right; // false -> kick left
  bool  @walk_before_kick;
  float @kick_direction; // 90 = left, 270 = right

  
  initial state stand 
  {
    decision 
    {
      if(state_time>3000)
        if(@walk_before_kick)
          goto go_to_ball;
        else
          goto wait_until_foot_movable;
      else
        stay;
    }
    action {
      motion.walk.step_control.foot = none;
      motion.type = stand;
    }
  }

  state go_to_ball
  {
    decision
    {
      if(action_done)
        goto wait_until_foot_movable;
      else
        stay;
    }
	  action
	  {
      //go_to_ball(distance=300);
      go_to_ball_cool(right_foot=true, distance=160);
	  // go_to_relative_point(rotation=0, x=300, y=0);
      head.control_mode = search_for_ball;
      motion.walk.stop_with_stand = false;
    
     
	  }
  }

  target state finished
  {
    decision
    {
      if(state_time > 2000){
			  if(@walk_before_kick)
			    goto go_to_ball;
			  else
			    goto stand;
      }
      else
        stay;
    }
    action
    {
      head.control_mode = search_for_ball;
      motion.walk.step_control.foot = none;
      motion.type = stand;
    }
  }

  state wait_until_foot_movable
  {
    decision
    {
      if((@kick_right && executed_motion.step_control.right_movable) 
        || (!@kick_right && executed_motion.step_control.left_movable))
        goto dribble;
      else stay;
    }
    action
    {
      motion.type = walk;
      motion.walk.style = stable;
      motion.walk.stop_with_stand = false;
      head.control_mode = search_for_ball;
    }
  }
  
  state dribble
  {
    decision 
    {
      // If foot standing on is not movable, wait until movable again -> action done
      if(state_time > 400 
        || state_time > 100 
        && ((@kick_right && executed_motion.step_control.left_movable)
        || (!@kick_right && executed_motion.step_control.right_movable)))
      {
        goto finished;
      }
      else
        stay;
    }
    action {
      head.control_mode = search_for_ball;
      motion.type = walk;
      motion.walk.coordinate = @kick_right?right_foot:left_foot;
      motion.walk.step_control.foot = @kick_right?right:left;
      motion.walk.step_control.target.x = 300;
      motion.walk.step_control.target.y = 0;
      motion.walk.step_control.target.rot = 0;
      motion.walk.step_control.speed_direction = @kick_direction;
      motion.walk.step_control.time = 400;
      motion.walk.style = stable;
      motion.walk.stop_with_stand = false;
    }
  }
  
  /*state step
  {
    decision
    {
      if(state_time > 1000 && @walk_before_kick)
        goto walk;
      else if(state_time > 1000)
        goto dribble;
      else
        stay;
    }
    action
    {
      motion.walk.coordinate = @kick_right?left_foot:right_foot;
      motion.walk.step_control.foot = @kick_right?left:right;
      motion.walk.step_control.target.x = @step_direction_x;
      motion.walk.step_control.target.y = @step_direction_y;
      motion.walk.step_control.target.rot = 0;
      motion.walk.step_control.speed_direction = 0;
      motion.walk.step_control.time = 800;
      motion.walk.style = stable;
      motion.walk.stop_with_stand = false;
    }
  }*/
}