option turn_around_ball_test
{
  common decision
  {
    if(!body.ready_to_walk || game.current_mode != playing)
      goto idle;
  }
  

  initial state idle
  {
    decision
    {
      else if(game.current_mode == playing)
        goto search_ball;
      else
        stay;
    }
    action
    {
    }
  }

  state approach_ball
  {
    decision
    {
      else if(ball.time_since_last_seen > 1000)
        goto search_ball;
      else if(action_done)
        goto turn_around_ball;
      else
        stay;
    }
    action 
    {
      head.control_mode = search_for_ball;
      motion.type = walk;
      
      motion.walk.coordinate = right_foot;
      motion.walk.style = normal;

      motion.walk_speed.x = 0.7*(ball.preview.right_foot.x - 120 - ball.radius);
      motion.walk_speed.y = ball.preview.right_foot.y;
      motion.walk_speed.rot = atan2(y = ball.preview.right_foot.y, x = ball.preview.right_foot.x);
    }
  }

  state turn_around_ball
  {
    decision
    {
      else if(ball.time_since_last_seen > 1000)
        goto search_ball;
      else if(vector.abs(x=ball.preview.x, y=ball.preview.y) > 250)
        goto turn_around_ball;
      else
        stay;
    }
	  action
	  {
	    move_around_ball();
	  }
  }

  state search_ball
  {
    decision
    {
      else if(ball.time_seen > 300 && ball.time_since_last_seen == 0)
        goto play;
      else
        stay;
    }
    action 
    {
      head.control_mode = search_for_ball;
      motion.type = stand;
    }
  }
}