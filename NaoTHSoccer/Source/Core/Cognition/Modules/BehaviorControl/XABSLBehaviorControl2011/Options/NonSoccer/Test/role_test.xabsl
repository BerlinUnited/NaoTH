/** behavior for testing the role change */
option role_test {

  common decision 
  {
    if( (team.members_alive_count == 0) ||
        (team.calc_if_is_striker && fall_down_state == upright))
    {
      goto striker;
    }
    else if(true)
    {
      goto defender;
    }
  }

	initial state striker 
	{ 
	  action {
      team.is_playing_as_striker = true;
      // show striker
	    motion.type = stand;
      head.control_mode = search_for_ball;
      head_control();
      battery();
      set_left_ear = platform.frameNumber % 10;
	  }
	}

  state defender 
  { 
    action {
      team.is_playing_as_striker = false;
      motion.type = stand;
      head.control_mode = search_for_ball;
      head_control();
      battery();
    }
  }

  
}