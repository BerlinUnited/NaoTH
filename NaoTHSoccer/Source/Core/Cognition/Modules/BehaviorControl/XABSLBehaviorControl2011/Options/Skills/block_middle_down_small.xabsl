option block_middle_down_small
{
  initial state go_down {
    decision {
      if(executed_motion.type == goalie_get_fast_down) {
          goto sit;
      }
      else
      {
        stay;
      }
    }
    action {
      motion.execute_immediately = true;
      motion.type = goalie_get_fast_down;
    }
  }

  state sit
  {
    decision {
      stay;
    }
    action {
      motion.execute_immediately = false;
      motion.type = goalie_sit_small;
    }
  }
}