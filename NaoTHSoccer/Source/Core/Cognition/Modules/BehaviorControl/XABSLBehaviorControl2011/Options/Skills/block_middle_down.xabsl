option block_middle_down
{
  initial state go_down {
    decision {
	    if(executed_motion.type == goalie_get_down) {
	        goto sit;
	    }
      else
      {
        stay;
      }
    }
    action {
      motion.execute_immediately = false;
      motion.type = goalie_get_down;
    }
  }

  state sit
  {
    decision {
      stay;
    }
    action {
      motion.execute_immediately = false;
      motion.type = goalie_sit;
    }
  }
}