#!/bin/bash

case "$1" in
  start)
    echo "starting naoth related process"
    # TODO: this somehow breaks camera... What does it?
    # /usr/libexec/reset-cameras.sh toggle
    systemctl --user start naoth.service
    ;;
  stop)
    echo "stopping naoth related processes"
    systemctl --user stop naoth.service
    ;;
  restart)
    systemctl --user restart naoth.service
    ;;
  status)
    systemctl --user status naoth.service
    ;;
  log)
    journalctl --user-unit=naoth
    ;;
  *)
    echo "Usage: naoth {start|stop|restart|status|log}"
    exit 1
    ;;

esac

exit 0
