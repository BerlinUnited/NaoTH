<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.202-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.naoth.rc.dialogsFx.representationinspector.RepresentationInspectorController">
   <children>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
         <items>
            <ToggleButton fx:id="btnRefresh" mnemonicParsing="false" text="Refresh">
               <toggleGroup>
                  <ToggleGroup fx:id="listener" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="btnBinary" mnemonicParsing="false" text="Binary" toggleGroup="$listener" />
            <ToggleButton fx:id="btnLog" mnemonicParsing="false" text="Log" toggleGroup="$listener" />
            <ChoiceBox fx:id="type" prefWidth="150.0" />
         </items>
      </ToolBar>
      <SplitPane fx:id="split" dividerPositions="0.2" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <items>
            <ListView fx:id="list" prefHeight="200.0" prefWidth="200.0" />
            <TextArea fx:id="content" editable="false" prefHeight="200.0" prefWidth="200.0">
               <font>
                  <Font name="Monospaced Regular" size="12.0" />
               </font></TextArea>
         </items>
      </SplitPane>
   </children>
</VBox>
