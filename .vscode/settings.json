{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/build/" : true
    },
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "cquery.cacheDirectory": "${workspaceFolder}/.vscode/cquery_cached_index/",
    "cSpell.enabled": false,
    "C_Cpp.errorSquiggles": "Disabled",
    "files.associations": {
        "*.lalrpop": "rust",
        "array": "cpp",
        "functional": "cpp",
        "istream": "cpp",
        "tuple": "cpp",
        "utility": "cpp",
        "typeinfo": "cpp",
        "hash_map": "cpp",
        "hash_set": "cpp",
        "*.tcc": "cpp",
        "string_view": "cpp",
        "thread": "cpp"
    },
    "cquery.index.extraClangArguments": ["-DREVISION=UNKNOWN"]
}